<%- include('headers/header')%>
  <%- include('headers/navigation')%>

    <style>
      .register-container {
        width: 100%;
        min-height: 80vh;
      }
    </style>

    <div class="register-container">


      <form class="container pt-2" action="/admin/register" method="POST" enctype="multipart/form-data">
        <h3 class="text-decoration-underline">Register User</h3>
        <div class="mb-3">
          <label class="form-label">Email address</label>
          <input name="email" type="email" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Full Name</label>
          <input name="name" type="text" class="form-control">
        </div>


        <div class="mb-3">
          <label class="form-label">Password</label>
          <input name="password" type="password" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Avatar</label>
          <input name="avatar" type="file" class="form-control">
        </div>

        <div class="mb-3">
          <a class="text-decoration-none" href="/login">Already have an account ?</a>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </div>

    <%- include('headers/footer')%>